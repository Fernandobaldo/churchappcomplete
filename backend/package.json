{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:test": "npx dotenv-cli -e .env.test -- tsx watch src/server.ts",
    "start:test": "npx dotenv-cli -e .env.test -- tsx src/server.ts",
    "migrate:test": "set DATABASE_URL=postgresql://postgres:postgres@localhost:5432/churchapp_test && prisma migrate deploy",
    "create-test-db": "tsx scripts/create-test-db.js",
    "create-dev-db": "tsx scripts/create-dev-db.js",
    "setup-test-db": "npm run create-test-db && npx dotenv-cli -e .env.test -- npx prisma db push --force-reset --accept-data-loss",
    "setup-dev-db": "npm run create-dev-db && npx prisma migrate deploy && npm run seed",
    "build": "tsc",
    "seed": "tsx prisma/seed.ts",
    "seed:test": "npx dotenv-cli -e .env.test -- tsx prisma/seed.ts",
    "check-plan": "tsx scripts/check-plan.js",
    "test:unit": "vitest run --dir tests/unit",
    "test:report": "vitest run --reporter=verbose --coverage",
    "test:watch": "vitest watch",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e:setup": "tsx tests/e2e/setup-e2e-db.js",
    "test:e2e": "npm run test:e2e:setup && npx dotenv-cli -e .env.test -- vitest run --dir tests/e2e",
    "test:e2e:watch": "npx dotenv-cli -e .env.test -- vitest watch --dir tests/e2e",
    "test": "npx dotenv-cli -e .env.test -- vitest"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.2.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^1.8.0",
    "@prisma/client": "^6.7.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.17.3",
    "@types/qrcode": "^1.5.6",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "fastify": "^4.29.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "nodemailer": "^7.0.11",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "allure-vitest": "^3.3.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.25.1",
    "nodemon": "^3.1.9",
    "prisma": "^6.6.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
